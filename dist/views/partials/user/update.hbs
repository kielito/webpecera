<body style="background-color: #d1ffe2;">
    <div class="contenedor">
        <div class="container p-4">        
            <br>            
            <form action="../update/{{usuario.Id}}" method="POST" style="width:70%;;margin-left:300px;">
                <div class="form-group">
                    <h3>Usuario: {{usuario.Usuario}}</h3>
                    <input class="form-control" type="text" name="Usuario"  value="{{usuario.Usuario}}" hidden>
                    <input class="form-control" type="text" name="Id"  value="{{usuario.Id}}" hidden>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Nombre</label>
                    <input class="form-control" type="text" name="Nombre" placeholder="Nuevo Nombre" value="{{usuario.Nombre}}" autofocus required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Apellido</label>
                    <input class="form-control" type="text" name="Apellido" placeholder="Nuevo Apellido" value="{{usuario.Apellido}}" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Contrase単a</label>
                    <input class="form-control" type="password" name="Password" placeholder="Nueva Contrase単a" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Repetir Contrase単a</label>
                    <input class="form-control" type="password" name="repassword" placeholder="Nueva Contrase単a" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Legajo</label>
                    <input class="form-control" type="text" name="Legajo" placeholder="Nuevo Legajo" value="{{usuario.Legajo}}" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input class="form-control" type="email" name="Email" placeholder="Nuevo Email" value="{{usuario.Email}}" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Perfil</label>
                    <select class="form-control" name="Perfil" required>
                        <option value="{{usuario.Perfil}}">{{usuario.Perfil}}</option>
                        <option value="Admin">Admin</option>
                        <option value="Usuario">Usuario</option>
                    </select>
                </div>
                <div style="width:80%;;margin-left:80px;" align="center">
                    <button class="btn btn-primary">Guardar</button>                    
                </div>
            </form>
            <br>
            <div style="width:70%;;margin-left:303px;" align="center">                
                <button class="btn btn-success" onclick="window.location.href='/user/users';">Volver</button>                
            </div>
        </div>
    </div>    
</body>



