<body style="background-color: #d1ffe2;">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center bg-dark">
                    <div class="card-header bg-success">
                        <h3>Usuario: {{usuario.Usuario}}</h3>
                    </div>
                    <div class="card-body bg-dark">
                        <form action="../update/{{usuario.Id}}" method="post">
                            <div class="form-group">                                 
                                <input class="form-control" type="text" name="usuario"  value="{{usuario.Usuario}}" hidden>                                
                                <input class="form-control" type="text" name="nombre" placeholder="Nuevo Nombre" value="{{usuario.Nombre}}" autofocus required>
                                </br>
                                <input class="form-control" type="text" name="apellido" placeholder="Nuevo Apellido" value="{{usuario.Apellido}}" required>
                                <!--name: nombre de la variable, placeholder: etiqueta-->
                                </br>
                                <input class="form-control" type="password" name="password" placeholder="Nueva ContraseÃ±a" required>
                                </br>
                                <input class="form-control" type="text" name="legajo" placeholder="Nuevo Legajo" value="{{usuario.Legajo}}" required>
                                </br>
                                <input class="form-control" type="email" name="email" placeholder="Nuevo Email" value="{{usuario.Email}}" required>                                 
                                </br>
                                 <select class="form-control" name="perfil" required>
                                   <option value="">Seleccionar el Nuevo Rol</option>
                                   <option value="Admin">Admin</option>
                                   <option value="Usuario">Usuario</option>                                                                                                           
                                </select>
                                </br>                                
                                <button class="btn btn-primary btn-block">Guardar</button>                                              
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div align="center">
    <BR>
    <button class="btn btn-info" onclick="window.location.href='/user/users';" align="center">Volver</button>
    </div>
</body>
