<script type="text/javascript">
    function muestra(id) {
        if (document.getElementById(id).style.display == "none")
            document.getElementById(id).style.display = "";
    }
    function oculta(id) {
        if (document.getElementById(id).style.display == "")
            document.getElementById(id).style.display = "none";
    }
</script>
<div>
    <div style="display:inline;">Cargar Producto</div>
    <div onClick="muestra('carga')" style="cursor:pointer;display: inline;">[+]</div>
    <div onClick="oculta('carga')" style="cursor:pointer;display:inline;">[-]</div>
</div>
<div id="carga" style="display: none">
    <form action="" method="POST" onkeypress="return anular(event)">
        <article>
            <div style="display: inline-block;">
                <br>
                <span>Cargar Usuario</span>
                <input type="text" name="usuario" maxlength="50" placeholder="Usuario" required />
                <span>Password</span>
                <input type="password" name="password" maxlength="50" placeholder="Password" required />
                <span>Legajo</span>
                <input type="text" name="legajo" maxlength="50" placeholder="Legajo" required />
                <br>
                <br>
                <span>Nombre</span>
                <input type="text" name="nombre" maxlength="50" placeholder="Nombre" required />
                <span>Apellido</span>
                <input type="text" name="apellido" maxlength="50" placeholder="Apellido" required />                
                <span>Email</span>
                <input type="email" name="email" maxlength="50" placeholder="Email" required />
            </div>
        </article>
        <div id="guardar"><br><br>
            <input class="btn btn-success" type="submit" value="Cargar" name="cargar">
        </div>
    </form>
</div>

<table border="1">
    <theader>
        <th>Id</th>
        <th>Nombre</th>
        <th>Password</th>
        <th>Accion</th>
    </theader>
    {{#each users}}
    <tr>
        <td>{{Id}}</td>
        <td>{{Usuario}}</td>
        <td>{{Password}}</td>
        <td><a class="btn btn-danger" href="/user/delete/{{Id}}">Eliminar</a></td>
    </tr>
    {{else}}
    <tr>
        <td colspan="4">No hay mas filas</td>
    </tr>
    {{/each}}
</table>
<br>
<form action="../user/procesar" method="post">
    <table border="1">
        <theader>
            <th>Accionn</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Password</th>
        </theader>
        {{#each users}}
        <tr>
            <td>
                <input type="checkbox" name="usuario" value="{{Id}}">
            </td>
            <td>{{Id}}</td>
            <td>{{Usuario}}</td>
            <td>{{Password}}</td>
        </tr>
        {{else}}
        <tr>
            <td colspan="4">No hay mas filas</td>
        </tr>
        {{/each}}
    </table>
    <button class="btn btn-success">Enviar</button>
</form>
