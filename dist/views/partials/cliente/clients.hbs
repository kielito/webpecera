<body style="background-color: #d1ffe2;">
    <div class="contenedor">
        <script type="text/javascript">
            function muestra(id) {
                if (document.getElementById(id).style.display == "none")
                    document.getElementById(id).style.display = "";
            }
            function oculta(id) {
                if (document.getElementById(id).style.display == "")
                    document.getElementById(id).style.display = "none";
            }
        </script>
        <div style="width:83%;margin-left:300px;">
            <div style="display:inline;">Cargar cliente</div>        
            <div onClick="muestra('carga')" style="cursor:pointer;display: inline;">[+]</div>
            <div onClick="oculta('carga')" style="cursor:pointer;display:inline;">[-]</div>
        </div>
        <div id="carga" style="display: none">
            <br>
            <form action="/client/add/" method="POST" style="width:70%;;margin-left:300px;">
                <div class="form-group">
                    <label for="exampleInputName1">Tipo de documento</label>
                    <select class="form-control" name="TipoDocumento" required>
                        <option value="" selected>Seleccione</option>
                        <option value="DNI">DNI</option>
                        <option value="CUIL">CUIL</option>
                        <option value="CUIT">CUIT</option>
                        <option value="Otro">OTRO</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Nùmero de Documento</label>
                    <input type="number" class="form-control" name="NumeroDocumento" id="exampleInputName2"
                        placeholder="28745111" required>
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="Nombre" id="exampleInputName2" placeholder="Esteban"
                        required>
                </div>
                <div class="form-group">
                    <label>Apelido</label>
                    <input type="text" class="form-control" name="Apellido" id="exampleInputName2" placeholder="Quete"
                        required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="Email" id="exampleInputName2" placeholder="mimail@gmail.com"
                        required>
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    <input type="text" class="form-control" name="Direccion" id="exampleInputName2"
                        placeholder="Cucha Cucha 2500 " required>
                </div>
                <div class="form-group">
                    <label>Localidad</label>
                    <input type="text" class="form-control" name="Localidad" id="exampleInputName2" placeholder="CABA "
                        required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Provincia</label>
                    <select class="form-control" name="Provincia" required>
                        <option value="" selected>Seleccione</option>
                        <option value="Buenos Aires">Buenos Aires</option>
                        <option value="CABA">CABA</option>
                        <option value="Catamarca">Catamarca</option>
                        <option value="Chaco">Chaco</option>
                        <option value="Chubut">Chubut</option>
                        <option value="Cordoba">Cordoba</option>
                        <option value="Corrientes">Corrientes</option>
                        <option value="Entre Rios">Entre Rios</option>
                        <option value="Formosa">Formosa</option>
                        <option value="Jujuy">Jujuy</option>
                        <option value="La Pampa">La Pampa</option>
                        <option value="La Rioja">La Rioja</option>
                        <option value="Mendoza">Mendoza</option>
                        <option value="Misiones">Misiones</option>
                        <option value="Neuquen">Neuquen</option>
                        <option value="Rio Negro">Rio Negro</option>
                        <option value="Salta">Salta</option>
                        <option value="San Juan">San Juan</option>
                        <option value="San Luis">San Luis</option>
                        <option value="Santa Cruz">Santa Cruz</option>
                        <option value="Santa Fe">Santa Fe</option>
                        <option value="Santiago del Estero">Santiago del Estero</option>
                        <option value="Tierra del Fuego">Tierra del Fuego</option>
                        <option value="Tucuman">Tucuman</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Código Postal</label>
                    <input type="text" class="form-control" name="CodigoPostal" id="exampleInputName2" placeholder="1406 "
                        required>
                </div>
                <div class="form-group">
                <button class="btn btn-primary" type="submit" >Agregar</button>
                </div>
            </form>
        </div>
        <div style="width:70%;margin-left:300px;">
            <BR>
            <h4>Listado de Clientes</h4>
        </div>
        <br>
        <table class="table table-striped" style="width:83%;;margin-left:300px;">
            <theader>
                <th>TipoDocumento</th>
                <th>NumeroDocumento</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Direccion</th>
                <th>Localidad</th>
                <th>Provincia</th>
                <th>CodigoPostal</th>
                <th>Accion</th>
            </theader>
            {{#each clients}}
            <tr>
                <td>{{TipoDocumento}}</td>
                <td>{{NumeroDocumento}}</td>
                <td>{{Nombre}}</td>
                <td>{{Apellido}}</td>
                <td>{{Email}}</td>
                <td>{{Direccion}}</td>
                <td>{{Localidad}}</td>
                <td>{{Provincia}}</td>
                <td>{{CodigoPostal}}</td>       
                <td><a class="btn btn-info" href="/client/update/{{Id}}">Editar</a> <a class="btn btn-danger" href="/client/delete/{{Id}}">Eliminar</a></td>
            </tr>
            {{else}}
            <tr>
                <td colspan="10">No hay mas filas</td>
            </tr>
            {{/each}}
        </table>
        <div style="width:80%;;margin-left:320px;">        
            <div align="center">
                <br>            
                <button class="btn btn-success" onclick="window.location.href='/user/home';" align="center">Volver</button>
            </div>
        </div>
    </div>
</body>