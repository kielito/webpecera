<body style="background-color: #d1ffe2;">
    <div class="contenedor">
        <form action="../update/{{productoProveedor.Id}}" method="POST" style="width:70%;;margin-left:300px;">
            <div class="form-group">
                <label for="exampleInputName1">Codigo Producto</label>
                <input type="text" class="form-control" name="CodigoProducto" id="exampleInputName1"
                    value="{{producto.CodigoProducto}}" readonly>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Descripci√≥n</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="Descripcion" rows="5"
                    readonly>{{producto.Descripcion}}</textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputName2">Stock Minimo</label>
                <input type="text" class="form-control" name="StockMinimo" id="exampleInputName2"
                    value="{{productoProveedor.StockMinimo}}" required>
            </div>
            <div class="form-group">
                <label for="exampleInputName3">Stock Actual</label>
                <input type="text" class="form-control" name="StockActual" id="exampleInputName3"
                    value="{{productoProveedor.StockActual}}" required>
            </div>
            <div class="form-group">
                <label for="exampleInputName4">Precio</label>
                <input type="text" class="form-control" name="PrecioVenta" id="exampleInputName4"
                    value="{{productoProveedor.PrecioVenta}}" required>
            </div>
            <div class="form-group">
                <label for="exampleInputName5">Proveedor</label>
                <!--
                <select class="form-control" name="IdProveedor" id="exampleSelectName1" required>
                    <option value="">Seleccionar</option>
                    {{#each proveedor}}
                    <option value="{{IdProveedor}}">{{Proveedor}}</option>
                    {{/each}}
                </select>
                -->
                <input type="text" class="form-control" name="RazonSocial" id="exampleInputName5"
                    value="{{razonSocial}}" readonly>
            </div>
            <div class="form-group">
                <button type="submit" style="clear:both;" class="btn btn-success">Acutalizar</button>
            </div>
        </form>
        <div align="center">
            <BR>
            <button class="btn btn-info" onclick="window.location.href='/product/control';"
                align="center">Volver</button>
        </div>
    </div>
</body>