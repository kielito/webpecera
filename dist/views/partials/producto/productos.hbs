<div class="contenedor">  
{{#if producto_crud}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-success fade show" role="alert">
                {{producto_crud}}
                <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}
<script type="text/javascript">
    function muestra(id) {
        if (document.getElementById(id).style.display == "none")
            document.getElementById(id).style.display = "";
    }
    function oculta(id) {
        if (document.getElementById(id).style.display == "")
            document.getElementById(id).style.display = "none";
    }
</script>
<div style="width:83%;margin-left:300px;">
    <div style="display:inline;">Cargar Producto</div>
    <br>
    <button type="submit" style="clear:both;float:right;" class="btn btn-secondary" onclick="window.location.href='/product/csv'">Actualizar Datos</button>            

    <div onClick="muestra('carga')" style="cursor:pointer;display: inline;">[+]</div>
    <div onClick="oculta('carga')" style="cursor:pointer;display:inline;">[-]</div>    
</div>

<div id="carga" style="display: none">
    <br>
    <form action="" method="POST" style="width:70%;;margin-left:300px;">
        <div class="form-group">
            <label for="exampleInputName1">Codigo Producto</label>
            <input type="text" class="form-control" name="codigoProducto" id="exampleInputName1" placeholder="Art-001" required>
        </div>        
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Descripci√≥n</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="descripcion" rows="5" placeholder="Breve descripcion"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputName2">Stock Minimo</label>
            <input type="text" class="form-control" name="stockMinimo" id="exampleInputName2" placeholder="1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputName2">Stock Actual</label>
            <input type="text" class="form-control" name="stockActual" id="exampleInputName2" placeholder="0" required>
        </div>
        <div class="form-group">
            <label for="exampleInputName2">Precio</label>
            <input type="text" class="form-control" name="Precio" id="exampleInputName2" placeholder="1" required>
        </div>        
        <div class="form-group">
            <label for="exampleInputName2">Proveedor</label>       
            <select class="form-control" name="proveedor" required>
                <option value="">Seleccionar el Proveedor</option>
                {{#each proveedor}}
                    <option>{{Proveedor}}</option>       
                 {{/each}}       
            </select>
        </div> 
       
        <div class="form-group">
            <button type="submit" style="clear:both;" class="btn btn-success">Cargar</button>
        </div> 
    </form>
</div>
<br>
<div style="width:70%;;margin-left:300px;">
    <label>Listado de productos</label>
</div>

<table class="table table-striped" style="width:83%;;margin-left:300px;">
    <theader>       
        <th style="width: 15%;">Codigo Producto</th>
        <th style="width: 20%;">Descripcion</th>
        <th style="width: 10%;">Stock Minimo</th>
        <th style="width: 10%;">Stock Actual</th>
        <th style="width: 10%;">Precio</th>
        <th style="width: 15%;">Proveedor</th>
        <th style="width: 20%;">Accion</th>
    </theader>
    {{#each products}}
    <tr>        
        <td>{{CodigoProducto}}</td>
        <td>{{Descripcion}}</td>
        <td>{{StockMinimo}}</td>
        <td>{{StockActual}}</td>
        <td>${{PrecioVenta}}</td>
        <td>{{RazonSocial}}</td>
        <td><a class="btn btn-secondary" href="">Modificar</a> <a class="btn btn-secondary"
                href="">Eliminar</a></td>
    </tr>
    {{else}}
    <tr>
        <td colspan="5">No hay mas filas</td>
    </tr>
    {{/each}}
</table>
</div>
