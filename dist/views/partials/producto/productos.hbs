<div class="contenedor">
    <script type="text/javascript">
        function muestra(id) {
            if (document.getElementById(id).style.display == "none")
                document.getElementById(id).style.display = "";
        }
        function oculta(id) {
            if (document.getElementById(id).style.display == "")
                document.getElementById(id).style.display = "none";
        }
    </script>
    <div style="width:83%;margin-left:300px;">
        <div style="display:inline;">Cargar Producto</div>        
        <div onClick="muestra('carga')" style="cursor:pointer;display: inline;">[+]</div>
        <div onClick="oculta('carga')" style="cursor:pointer;display:inline;">[-]</div>
        <br>
        <button type="submit" style="clear:both;float:right;" class="btn btn-secondary"
            onclick="window.location.href='/product/upload'">Actualización Masiva</button>
        <br>
    </div>
    <div id="carga" style="display: none">
        <br>
        <form action="../product/add" method="POST" style="width:70%;;margin-left:300px;">
            <div class="form-group">
                <label for="exampleInputName1">Codigo Producto</label>
                <input type="text" class="form-control" name="CodigoProducto" id="exampleInputName1"
                    placeholder="Art-001" required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Descripción</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="Descripcion" rows="5"
                    placeholder="Breve descripcion"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputName2">Stock Minimo</label>
                <input type="text" class="form-control" name="StockMinimo" id="exampleInputName2" placeholder="5"
                    required>
            </div>
            <div class="form-group">
                <label for="exampleInputName3">Stock Actual</label>
                <input type="text" class="form-control" name="StockActual" id="exampleInputName3" placeholder="50"
                    required>
            </div>
            <div class="form-group">
                <label for="exampleInputName4">Precio</label>
                <input type="text" class="form-control" name="PrecioVenta" id="exampleInputName4" placeholder="550" required>
            </div>
            <div class="form-group">
                <label for="exampleSelectName1">Proveedor</label>
                <select class="form-control" name="IdProveedor" id="exampleSelectName1" required>
                    <option value="">Seleccionar</option>
                    {{#each proveedor}}
                    <option value="{{IdProveedor}}">{{Proveedor}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <button type="submit" style="clear:both;" class="btn btn-success">Cargar</button>
            </div>
        </form>
    </div>
    <br>
    <div style="width:70%;;margin-left:300px;">
        <label>Listado de productos</label>
    </div>
    <table class="table table-striped" style="width:83%;;margin-left:300px;">
        <theader>
            <th style="width: 15%;">Codigo Producto</th>
            <th style="width: 20%;">Descripcion</th>
            <th style="width: 10%;">Stock Minimo</th>
            <th style="width: 10%;">Stock Actual</th>
            <th style="width: 10%;">Precio</th>
            <th style="width: 15%;">Proveedor</th>
            <th style="width: 20%;">Accion</th>
        </theader>
        {{#each products}}
        <tr>
            <td>{{CodigoProducto}}</td>
            <td>{{Descripcion}}</td>
            <td>{{StockMinimo}}</td>
            <td>{{StockActual}}</td>
            <td>${{PrecioVenta}}</td>
            <td>{{RazonSocial}}</td>
            <td><a class="btn btn-secondary" href="/product/update/{{Id}}&{{CodigoProducto}}&{{RazonSocial}}">Modificar</a> <a class="btn btn-secondary" href="/product/delete/{{Id}}">Eliminar</a>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="5">No hay mas filas</td>
        </tr>
        {{/each}}
    </table>
</div>